<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="How Much Is Your Time Worth?" />

    <EditText
        android:id="@+id/addSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_num"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_button" />

    <TextView
        android:id="@+id/salarySeconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Seconds" />

    <TextView
        android:id="@+id/salaryMins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Minutes" />

    <TextView
        android:id="@+id/salaryHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Hours" />

    <TextView
        android:id="@+id/salaryDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Days" />

    <TextView
        android:id="@+id/salaryWeeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Weeks" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="How Long Will It Take To Buy Something Nice?" />

    <EditText
        android:id="@+id/Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/addItemPrice"
        android:ems="10"
        android:hint="@string/addItemPrice"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calculate_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/calculateTime"
        android:text="@string/calculateTime" />

    <TextView
        android:id="@+id/displayTimeS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Seconds" />

    <TextView
        android:id="@+id/displayTimeM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Minutes" />

    <TextView
        android:id="@+id/displayTimeHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Hours" />

    <TextView
        android:id="@+id/displayTimeDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Days" />

    <TextView
        android:id="@+id/displayTimeW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Weeks" />
    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="How Long Will It Take To Pay Your Student Loans?" />
    <EditText
        android:id="@+id/addRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Rate Percentage"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/addPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Starting Loan"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/addPayOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Pay-Off per Year"
        android:inputType="numberDecimal" />
    <Button
        android:id="@+id/calculateYears"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/calculateTime"
        android:text="@string/calculateTime" />
    <TextView
        android:id="@+id/displayTimeLoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="Approximate Years" />
</LinearLayout>
</ScrollView>